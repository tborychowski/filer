{
  "name": "filer",
  "productName": "Filer",
  "version": "1.0.0",
  "description": "File Manager",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/tborychowski/filer.git"
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "electron index.js",
    "cp": "sudo rm -r /Applications/Filer.app/ ; sudo cp -R ./dist/mac/Filer.app /Applications/",
    "build": "gulp build && build --mac && yarn cp",
    "release": "gulp build && build --mac --publish always"
  },
  "author": "Tom",
  "license": "GPL-3.0-or-later",
  "build": {
    "appId": "com.electron.filer",
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "publish": [
      "github"
    ]
  },
  "dependencies": {
    "electron-store": "^1.3.0",
    "electron-window-state": "^4.1.1",
    "font-awesome": "^4.7.0",
    "fs-extra": "^5.0.0",
    "git-state": "^4.0.0",
    "javascript-natural-sort": "^0.7.1",
    "json5": "^0.5.1",
    "lodash.get": "^4.4.2",
    "mousetrap": "^1.6.1",
    "nodobjc": "^2.1.0",
    "pathwatcher": "^7.1.1",
    "plist": "^2.1.0",
    "pretty-bytes": "^4.0.2",
    "recursive-copy": "^2.0.7",
    "tingodb": "^0.5.1"
  },
  "devDependencies": {
    "electron": "1.8.2-beta.3",
    "electron-builder": "~19.50.0",
    "gulp": "^3.9.1",
    "gulp-concat": "^2.6.1",
    "gulp-debug": "^3.1.0",
    "gulp-notify": "^3.0.0",
    "gulp-plumber": "^1.1.0",
    "gulp-run-electron": "^3.0.1",
    "gulp-sourcemaps": "^2.6.1",
    "gulp-stylus": "^2.6.0"
  }
}
