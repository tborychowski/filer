@require '_lib'

footer
	display flex
	min-height 26px
	padding 0 20px
	background #eee
	align-items center
	justify-content space-between
	border-top 1px solid #ccc
	box-shadow 0 1px 0 #f5f5f5 inset

	div
		margin 0 2em
		white-space nowrap

		i
			margin-right 5px

	.dirty
		color maroon

	.clean
		color darkgreen


.statusbar-filler
	flex 1