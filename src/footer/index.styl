@require '_lib'

footer
	position absolute
	left 0
	right 0
	bottom 0
	height footer-h

	display flex
	padding 0 20px
	background #eee
	align-items center
	justify-content space-between
	border-top 1px solid #ccc
	border-bottom 1px solid #ccc
	box-shadow 0 1px 0 #f5f5f5 inset
	font-size 13px

	i
		margin-right 5px

	.footer-stats
		display flex

	.footer-stats-item
		margin 0 1.4em
		white-space nowrap


	.git-dirty
		color maroon

	.git-clean
		color darkgreen


.footer-filler
	flex 1