@require '_lib'


.list
	padding 5px
	margin 0
	list-style none


.file-item
	display flex
	line-height 1.6
	align-items center
	padding 2px 5px
	border-radius 3px
	color #eee

	&:hover
		background-color rgba(50,100,200, 0.2)



.file-name
	flex 1

.file-icon
	width 24px
	margin-right 5px
	font-style normal
	text-align center
