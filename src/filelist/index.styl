@require '_lib'

.file-list
	position absolute
	left 0
	right 0
	top header-h
	bottom footer-h
	overflow-y auto


.file-name
	flex 1

.file-icon
	font-size 22px
	width 22px
	margin-right 10px
	color #ccc
	font-style normal
	text-align center


.overedit-input
	font inherit
	box-sizing border-box
	padding 2px 10px


.drops
	display flex
	flex-flow column

.drops-list
	overflow-y auto
	padding 10px 0
	flex 1

.drops-list-item
	padding 5px 10px
	display flex
	align-items center

.drops-list-item.selected
	background-color #eee


.drops-list-item.highlighted
	background-color #2E69E2
	color #fff











.filelist-wrapper
	position absolute
	left 0
	right 0
	top header-h
	bottom footer-h
	overflow-y auto

.filelist
	display flex
	flex-flow column

.filelist-item
	padding 5px 10px
	display flex
	align-items center

.filelist-item.selected
	background-color #eee


.filelist-item.highlighted
	background-color #2E69E2
	color #fff



.filelist-input
	font inherit
	border none
	border-radius 3px
	padding 3px 10px
	box-shadow 0 0 0 1px #ccc

	&::placeholder
		color #ccc
		text-align center

	&:focus
		&::placeholder
			color #fff