@require '_lib'

.filelist-wrapper
	position absolute
	left 0
	right 0
	top header-h
	bottom footer-h
	overflow-y auto
	padding 2px 0

.filelist
	display flex
	flex-flow column

.filelist-item
	padding 5px 10px
	display flex
	align-items center

.filelist-item.selected
	background-color #eee

	i::before
		content "\f00c"
		color #95c095

.filelist-item.highlighted
	background-color #256BD2
	color #fff


.file-name
	flex 1

.file-ext
	color #ccc
	margin-left 5px
	min-width 80px
	text-align right

.file-size
	color #ccc
	margin-left 5px
	min-width 90px
	text-align right

.file-icon
	font-size 22px
	width 22px
	height 22px
	margin-right 10px
	color #ccc
	font-style normal
	text-align center



.filelist-input
	font inherit
	border-radius 4px
	border 0.5px solid rgba(#444, 0.3)
	border-color #c2c0c2 #c2c0c2 #a19fa1
	padding 3px 10px
	color #444
	background-color rgba(#fff, 0.95)
	box-shadow: 0 0.5px 0.5px rgba(0, 0, 0, .06)


	&::placeholder
		color #ccc
		text-align center

	&:focus
		&::placeholder
			color #fff



.filelist-edit-input
	font inherit
	box-sizing border-box
	padding 2px 10px

