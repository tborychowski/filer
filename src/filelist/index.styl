@require '_lib'

.filelist-wrapper
	position absolute
	left 0
	right 0
	top header-h
	bottom footer-h
	overflow-y auto
	padding 2px 0

.filelist
	display flex
	flex-flow column

.filelist-item
	padding 5px 10px
	display flex
	align-items center

.filelist-item.selected
	background-color #eee

	i::before
		content "\f00c"
		color #95c095

.filelist-item.highlighted
	background-color #2E69E2
	color #fff


.file-name
	flex 1

.file-ext
	color #ccc
	margin-left 5px
	width 80px
	text-align right

.file-size
	color #ccc
	margin-left 5px
	width 90px
	text-align right

.file-icon
	font-size 22px
	width 22px
	margin-right 10px
	color #ccc
	font-style normal
	text-align center



.filelist-input
	font inherit
	border none
	border-radius 3px
	padding 3px 10px
	box-shadow 0 0 0 1px #ccc

	&::placeholder
		color #ccc
		text-align center

	&:focus
		&::placeholder
			color #fff



.filelist-edit-input
	font inherit
	box-sizing border-box
	padding 2px 10px

