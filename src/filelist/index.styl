@require '_lib'

.file-list
	position absolute
	left 0
	right 0
	top 0
	bottom 0

.file-name
	flex 1

.file-icon
	width 24px
	margin-right 8px
	font-style normal
	text-align center


.drops
	display flex
	height 100%
	flex-flow column

.drops-input
	font inherit
	width 100%
	height 22px

.drops-list
	overflow-y auto
	padding 10px 0
	flex 1

.drops-list-item
	padding 5px 10px
	display flex
	align-items center

.drops-list-item.selected
	background-color #2E69E2
	color #fff
