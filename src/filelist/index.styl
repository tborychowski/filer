@require '_lib'

.filelist-wrapper
	position absolute
	left 0
	right 0
	top header-h
	bottom footer-h
	overflow-y auto
	padding 2px 0
	background-color #fff
	transition filter .2s ease-out
	-webkit-overflow-scrolling touch


.command-palette-visible .filelist-wrapper
	filter brightness(80%)



.filelist
	display flex
	flex-flow column

.filelist-item
	padding 5px 10px
	display flex
	align-items center

.filelist-item.selected
	background-color #eee

	i::before
		content "\f00c"
		color #95c095

.file-icon
	font-size 22px
	width 22px
	height 22px
	margin-right 10px
	color #bbb
	font-style normal
	text-align center


.file-name
	color #222
// 	flex 1

.file-ext
	color #bbb
	margin-left 1px
	text-align right

