@require '_lib'

.drops
	display flex
	height 100%
	flex-flow column

.drops-input
	font inherit
	width 100%
	height 22px

.drops-list
	overflow-y auto
	padding 10px 0
	flex 1

.drops-list-item
	padding 5px 10px
	display flex
	align-items center

.drops-list-item.selected
	background-color rgba(100,100,100, 0.2)


.drops-list-item.highlighted
	background-color #2E69E2
	color #fff

