@require '_lib'

header
	-webkit-app-region drag
	position absolute
	left 0
	right 0
	top 0
	height header-h
	display flex
	padding 8px 10px 6px 100px
	color #555
	background #e8e6e8 linear-gradient(to bottom, #e8e6e8 0, #d1cfd1 100%)
	box-shadow 0 0.5px 0 #f5f4f5 inset, 0 0.5px #bbb



.toolbar-btn
.filelist-input
	font inherit
	border-radius 4px
	color inherit
	background-color rgba(#fff, 0.95)
	background linear-gradient(#FCFCFC, #F5F4F5)
	display flex
	justify-content center
	align-items center
	border-color #c2c0c2 #c2c0c2 #a19fa1
	font-size 13px
	padding 0 10px
	border none
	box-shadow 0 1px 0 rgba(0,0,0,0.15), 0 0 0 0.5px #b3b2b3


	&[disabled]
		color #D3D3D3


.filelist-input
	&::placeholder
		color #d3d3d3
		text-align center

	&:focus
		&::placeholder
			color transparent



.toolbar-filler
	flex 1


.toolbar-btn
	margin-right 10px
	min-width 42px

	&:focus
		outline none

	&:active
		background-color #ececec


	i
	span
		pointer-events none

	span
		font-size 12px
		line-height 1

		&:not(:empty)
			margin 0 2px 0 5px


.toolbar-btn-group
	display flex
	margin-right 10px
	border-radius 4px

	.toolbar-btn
		margin 0
		border-radius 0

		& + .toolbar-btn
			margin-left 0

		&:first-child
			border-top-left-radius 4px
			border-bottom-left-radius 4px

		&:last-child
			border-top-right-radius 4px
			border-bottom-right-radius 4px


		&:active
		&:focus
			z-index 10




.inactive
	header
		background #F6F6F6
		color #aaa

	.toolbar-btn
	.filelist-input
		background #F6F6F6
		box-shadow 0 0 0 0.5px #DBDBDB

